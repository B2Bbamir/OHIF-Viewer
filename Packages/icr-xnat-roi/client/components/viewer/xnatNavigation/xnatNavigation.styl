@import "{ohif:design}/app"

.xnat-navigation-window
  theme('color', '$textPrimaryColor')

  float: left
  height: 100%
  width: 100%
  overflow: hidden
  background-color: black
  margin: 8px
  padding-bottom: 20px

  h5
    font-weight: 400
    text-align: left

  h6
    font-weight: 400
    text-align: left
    theme('color', '$textSecondaryColor')

  .xnat-navigation-tree
    max-height: calc(100%)
    text-align: left
    padding-right: 18px
    overflow-y: auto
    overflow-x: hidden
    display:inline-block

    .xnat-nav-button
      margin-left: 10px
      margin-right: 10px

    .xnat-nav-horizontal-box
      display: -webkit-flex
      display: -ms-flexbox
      display: flex
      flex-direction: row
      align-items: center
      align-self: flex-start

    ul
      padding-left: 10px
      list-style-type: none

      .xnat-nav-session-caret
        padding-left: 30px
        padding-right: 10px
