@import "{ohif:design}/app"

.ioDialog
  theme('border', '1px solid $uiBorderColor', 0.95)
  theme('background', '$uiGrayDarkest', 0.95)
  theme('color', '$textSecondaryColor')
  z-index: 1000
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  margin: auto
  overflow: hidden
  padding: 0px
  width: 220px
  height: 100px
  border-radius: 8px
  text-align: center

  h5, label
    font-weight: 400

.ioMessageDialog
  theme('border', '1px solid $uiBorderColor', 0.95)
  theme('background', '$uiGrayDarkest', 0.95)
  theme('color', '$textSecondaryColor')
  z-index: 1000

  max-height: calc(100% - 100px)
  max-width: 400px
  position: absolute
  margin: auto

  overflow: hidden
  padding: 10px
  border-radius: 8px
  text-align: center

  .ioDialogCancel
    float: right

  .ioDescription
    float: left

  h3
    font-weight: 400

  .ioBody
    clear: both
    float: left
    text-align: left

.ioHelpDialog
  theme('border', '1px solid $uiBorderColor', 0.95)
  theme('background', '$uiGrayDarkest', 0.95)
  theme('color', '$textSecondaryColor')
  z-index: 1000

  max-height: calc(100% - 100px)
  max-width: 400px
  position: absolute
  margin: auto

  overflow: hidden
  padding: 10px
  border-radius: 8px
  text-align: center

  h3, label
    font-weight: 400

  .ioDialogCancel
    float: right

  .ioDescription
    float: left

  .ioBody
    float: left
    text-align: left

.ioTextInputDialog
  theme('border', '1px solid $uiBorderColor', 0.95)
  theme('background', '$uiGrayDarkest', 0.95)
  theme('color', '$textSecondaryColor')
  z-index: 1000

  max-height: calc(100% - 100px)
  max-width: calc(100% - 100px)
  position: absolute
  margin: auto

  margin: auto
  overflow: hidden
  padding: 10px
  border-radius: 8px
  text-align: center

  .ioDialogCancel
    float: right

  .ioDescription
    float: left

  h3
    font-weight: 400

  .ioTextInputOptions
    padding: 10px 0

  .ioTextInputOptions  label
    clear: both
    float: left

  .ioTextInput
    margin-left: 5px

  .ioBody
    float: left
    text-align: left

  .ioDialogConfirm
    float: center
