@import "{ohif:design}/app"

.roiCollectionBuilderDialog
  theme('border', '1px solid $uiBorderColor', 0.95)
  theme('background', '$uiGrayDarkest', 0.95)
  theme('color', '$textSecondaryColor')
  z-index: 1000

  max-height: calc(100% - 300px)
  max-width: calc(100% - 100px)
  position: absolute
  margin: auto


  padding-right: 10px
  padding-left: 10px
  padding-top: 5px
  padding-bottom: 10px
  border-radius: 8px
  text-align: center

  h5, label
    font-weight: 400
    float: left


  .roiCollectionBuilderHeader
    display: -webkit-flex
    display: -ms-flexbox
    display: flex
    justify-content: space-between

  h3
    font-weight: 400
    text-align: left

  .roiCollectionBuilderCancel
    text-align: right
    margin-top: 16px

  svg
    background-color: transparent
    width: 32px
    height: 32px
    fill: white

  .roiCollectionBuilderTableButton
    width: 100%

  .roiCollectionBuilderListBody
    max-height: calc(80vh - 300px);
    overflow-y: auto
    overflow-x: hidden
    display: inline-block

  .roiCollectionBuilderListBody table, tr, th
    padding: 0px 10px

  .roiCollectionBuilderListBody th
    white-space: nowrap

  .roiCollectionBuilderFooter
    display: -webkit-flex
    display: -ms-flexbox
    display: flex
    justify-content: space-around
    align-items: center

  .roiCollectionBuilderTextInputOptions
    margin: 5px
    text-align: left

  .roiCollectionBuilderExport
    text-align: right
    margin: 5px

  .centeredCell
    text-align: center
