@import "{ohif:design}/app"

.roi-collection-builder-dialog
  theme('border', '1px solid $uiBorderColor', 0.95)
  theme('background', '$uiGrayDarkest', 0.95)
  theme('color', '$textSecondaryColor')
  z-index: 1000

  max-height: calc(100% - 300px)
  max-width: calc(100% - 100px)
  position: absolute
  margin: auto


  padding-right: 10px
  padding-left: 10px
  padding-top: 5px
  padding-bottom: 10px
  border-radius: 8px
  text-align: center

  h5, label
    font-weight: 400
    float: left


  .roi-collection-builder-header
    display: -webkit-flex
    display: -ms-flexbox
    display: flex
    justify-content: space-between

  h3
    font-weight: 400
    text-align: left

  .roi-collection-builder-cancel
    text-align: right
    margin-top: 16px

  svg
    background-color: transparent
    width: 32px
    height: 32px
    fill: white

  .roiCollectionBuilderTableButton
    width: 100%

  .roi-collection-builder-list-body
    max-height: calc(80vh - 300px);
    overflow-y: auto
    overflow-x: hidden
    display: inline-block

    .left-aligned-cell
      text-align: left

  .roi-collection-builder-list-body table, tr, th, td
    padding: 0px 10px

  .roi-collection-builder-list-body th
    white-space: nowrap

  .roi-collection-builder-footer
    display: -webkit-flex
    display: -ms-flexbox
    display: flex
    justify-content: space-between
    align-items: center

    input
      margin: 5px
