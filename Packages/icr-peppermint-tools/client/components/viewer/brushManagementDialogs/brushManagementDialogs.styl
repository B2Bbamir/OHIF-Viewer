@import "{ohif:design}/app"
@import "../peppermint-table.styl"

.brush-management-dialog
  theme('border', '1px solid $uiBorderColor', 0.95)
  theme('background', '$uiGrayDarkest', 0.95)
  theme('color', '$textSecondaryColor')
  z-index: 1000

  max-height: calc(100% - 50px)
  max-width: calc(100% - 100px)
  position: absolute
  margin: auto


  padding-right: 10px
  padding-left: 10px
  padding-bottom: 10px
  border-radius: 8px
  text-align: center

  .brush-management-header
    display: -webkit-flex
    display: -ms-flexbox
    display: flex
    flex-wrap: nowrap
    justify-content: space-between

  h3
    font-weight: 400
    text-align: left

  .brush-management-cancel
    text-align: right
    margin-top: 16px

  .brush-management-list-bordered
    border-width: 1px
    border-top-style: solid
    border-bottom-style: solid

  .brush-management-new-button
    float: center
    width: 100%

  .brush-management-list
    max-height: 300px
    padding-right: 18px
    overflow-y: auto
    overflow-x: hidden
    display: inline-block
    theme('scrollbar-color', '$textSecondaryColor $uiGrayDarkest')

    &::-webkit-scrollbar
      them('background', '$uiGrayDarkest')
      width: 10px

    &::-webkit-scrollbar-thumb
      theme('background', '$textSecondaryColor')
      border-radius: 10px
      theme('border-right', '2px solid $uiGrayDarkest')
