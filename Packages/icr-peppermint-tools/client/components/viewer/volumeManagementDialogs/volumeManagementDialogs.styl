@import "{ohif:design}/app"
@import "../peppermint-table.styl"

.volume-management-dialog
  theme('border', '1px solid $uiBorderColor', 0.95)
  theme('background', '$uiGrayDarkest', 0.95)
  theme('color', '$textSecondaryColor')
  z-index: 1000

  max-height: calc(100% - 50px)
  max-width: calc(100% - 100px)
  position: absolute
  margin: auto


  padding-right: 10px
  padding-left: 10px
  padding-top: 10px
  padding-bottom: 10px
  border-radius: 8px
  text-align: center

  .volume-management-header
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    justify-content: space-between

  h3
    font-weight: 400
    text-align: left

  .volume-management-cancel
    text-align: right
    margin-top: 16px

  .volume-management-new-button
    float: center
    width: 100%

  .volumeManagementTableButton
    width: 100%

  .volume-list-header
    border-width: 1px
    border-top-style: solid
    border-bottom-style: solid
