@import "{ohif:design}/app"

.brushMetadataDialog
  theme('border', '1px solid $uiBorderColor', 0.95)
  theme('background', '$uiGrayDarkest', 0.95)
  theme('color', '$textSecondaryColor')
  z-index: 1000

  max-height: calc(100% - 50px)
  min-width: 260px
  max-width: calc(100% - 100px)
  position: absolute
  margin: auto


  padding-right: 10px
  padding-left: 10px
  padding-bottom: 10px
  border-radius: 8px
  text-align: center

  .brushMetadataHeader
    display: -webkit-flex
    display: -ms-flexbox
    display: flex
    flex-wrap: nowrap
    justify-content: space-between

  h3
    font-weight: 400
    text-align: left
    border-radius: 8px
    padding: 2px

  .brushMetadataCancel
    text-align: right
    margin-top: 16px

  .brushMetadataNewButton
    float: center
    width: 100%

  .brushMetadataTableButton
    width: 100%

  .brush-metadata-vert-box
    display: -webkit-flex
    display: -ms-flexbox
    display: flex
    flex-direction: column
    justify-context: flex-start

  .brush-metadata-vert-box label
    margin-top: 20px
    text-align: left

  .brush-metadata-horizontal-box
    display: -webkit-flex
    display: -ms-flexbox
    display: flex
    flex-direction: row
    align-items: baseline
    justify-context: space-between

  .brushMetadataSearchList
    text-align: left
    max-height: calc(50vh - 300px);
    padding-right: 18px
    overflow-y: auto
    overflow-x: hidden

  .brush-metadata-validity-indicator
    margin-left: 10px
