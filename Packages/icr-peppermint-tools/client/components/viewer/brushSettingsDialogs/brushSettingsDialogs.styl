@import "{ohif:design}/app"
@import "{icr:peppermint-tools}/client/components/viewer/peppermint-table.styl";

.brush-settings-dialog
  theme('border', '1px solid $uiBorderColor', 0.95)
  theme('background', '$uiGrayDarkest', 0.95)
  theme('color', '$textSecondaryColor')
  z-index: 1000

  max-height: calc(100% - 300px)
  width: 400px
  position: absolute
  margin: auto

  padding-right: 10px
  padding-left: 10px
  padding-top: 5px
  padding-bottom: 10px
  border-radius: 8px
  text-align: center

  select
    width: 100%

  h5, label
    font-weight: 400
    float: left

  h3
    font-weight: 400
    text-align: left

  .brush-settings-horizontal-box
    display: -webkit-flex
    display: -ms-flexbox
    display: flex
    justify-content: space-between
    flex-direction: row
    align-items: center
    align-self: flex-start
